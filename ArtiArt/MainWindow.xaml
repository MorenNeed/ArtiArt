<Window x:Class="ArtiArt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArtiArt"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid Margin="10,50,480,250" Background="BlanchedAlmond">
            <Image x:Name="Image"/>
        </Grid>
        <Button x:Name="Choose_Photo" Content="Choose photo..." HorizontalAlignment="Left" Margin="325,164,0,0" VerticalAlignment="Top" Click="Choose_Photo_Click" Background="Bisque"/>
    </Grid>
</Window>
